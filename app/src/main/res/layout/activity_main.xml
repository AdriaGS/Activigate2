<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.cnrs.ipal.activigate2.View.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sample_main_layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/fab_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/sample_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/title_message"
                    android:textSize="30dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/toHistoricButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/toHistoryButton"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:onClick="goFitbit"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/sample_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:text="@string/intro_message" />

        <Button
            android:id="@+id/ReadingButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal"
            android:onClick="onSensing"
            android:background="@drawable/activigate_logo" />
        <TextView
            android:id="@+id/sensingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOT SENSING"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/activity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO ACTIVITY RECOGNIZED YET"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
